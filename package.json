{
  "name": "lodgify-automation-qa-test",
  "description": "Lodgify QA automation challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GilbertoGNG/Lodgify-Automation-QA-Test.git"
  },
  "author": "Lodgify QA Team",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^9.5.3",
    "cypress-cucumber-preprocessor": "^4.3.1"
  },
  "scripts": {
    "dev-server": "node server/server.js",
    "install-all": "npm install && cd server && npm install",
    "cy:open": "npx cypress open --config-file=cypress/config/cypress.staging.json",
    "cy:open:staging": "npx cypress open --config-file=cypress/config/cypress.staging.json",
    "cy:open:dev": "npx cypress open --config-file=cypress/config/cypress.dev.json",
    "cy:open:prod": "npx cypress open --config-file=cypress/config/cypress.prod.json",
    "cy:run": "npx cypress run --browser chrome --config-file=cypress/config/cypress.staging.json",
    "cy:run:staging": "npx cypress run --browser chrome --config-file=cypress/config/cypress.staging.json",
    "cy:run:dev": "npx cypress run --browser chrome --config-file=cypress/config/cypress.dev.json",
    "cy:run:prod": "npx cypress run --browser chrome --config-file=cypress/config/cypress.prod.json"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false
  }
}
